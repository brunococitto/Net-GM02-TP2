@model Business.Entities.Usuario

    <h2 class="mb-3 text-center">Eliminar usuario</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <input asp-for="ID" type="hidden" />
            <div class="mb-3">
                <label asp-for="NombreUsuario" class="form-label">Nombre Usuario</label>
                <input disabled asp-for="NombreUsuario" class="form-control" placeholder="@Model.NombreUsuario" value="@Model.NombreUsuario" />
            </div>
            <div class="mb-3">
                <label asp-for="Persona.Nombre" class="form-label">Nombre</label>
                <input disabled asp-for="Persona.Nombre" class="form-control" placeholder="@Model.Persona.Nombre" value="@Model.Persona.Nombre" />
            </div>

            <div class="mb-3">
                <label asp-for="Persona.Apellido" class="form-label">Año especialidad</label>
                <input disabled asp-for="Persona.Apellido" class="form-control" placeholder="@Model.Persona.Apellido" value="@Model.Persona.Apellido" />
            </div>

            <div class="mb-3">
                <label class="form-label">Usuario Habilitado</label>
                <input disabled type="checkbox" asp-for="Habilitado" id="habilitado"></input>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success">Confirmar</button>
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>