@model EditUsuarioViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Usuario.ID" type="hidden" />
            <div class="form-group">
                <label asp-for="Usuario.NombreUsuario" class="form-label">Nombre Usuario</label>
                <input maxlength="20" minlength="3" asp-for="Usuario.NombreUsuario" class="form-control" placeholder="@Model.Usuario.NombreUsuario" value="@Model.Usuario.NombreUsuario" />
                <span asp-validation-for="Usuario.NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Persona.Nombre" class="form-label">Nombre</label>
                <input maxlength="20" minlength="3" asp-for="Usuario.Persona.Nombre" class="form-control" placeholder="@Model.Usuario.Persona.Nombre" value="@Model.Usuario.Persona.Nombre" />
                <span asp-validation-for="Usuario.Persona.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Persona.Apellido" class="form-label">Apellido</label>
                <input maxlength="20" minlength="3" asp-for="Usuario.Persona.Apellido" class="form-control" placeholder="@Model.Usuario.Persona.Apellido" value="@Model.Usuario.Persona.Apellido" />
                <span asp-validation-for="Usuario.Persona.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Clave" class="form-label">Clave</label>
                <input maxlength="20" minlength="3" asp-for="Usuario.Clave" class="form-control" />
                <span asp-validation-for="Usuario.Clave" class="text-danger"></span>
            </div>
            <input type="checkbox" asp-for="Usuario.Habilitado"></input>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}