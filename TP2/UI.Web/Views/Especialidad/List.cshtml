@model IEnumerable<Business.Entities.Especialidad>

    <h2 class="mb-3 text-center">Especialidades</h2>

    <a class="btn btn-outline-success mb-2" asp-action="Create">Agregar</a>

<ul class="list-group">
    @foreach  (Business.Entities.Especialidad esp in Model)
            {
                <div class="card mb-2">
                    <div class="card-body">
                        <h5 class="card-title">@esp.Descripcion</h5>
                        <a class="btn btn-primary" asp-area="" asp-action="Edit" asp-route-id="@esp.ID">Editar</a>
                        <a class="btn btn-danger" asp-area="" asp-action="Delete" asp-route-id="@esp.ID">Eliminar</a>
                    </div>
                </div>
            }
</ul>