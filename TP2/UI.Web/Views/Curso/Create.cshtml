@model CreateCursoViewModel

    <h2 class="mb-3 text-center">Crear curso</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <div class="mb-3">
                <label asp-for="Curso.Descripcion" class="form-label">Descripción</label>
                <input maxlength="20" minlength="3" asp-for="Curso.Descripcion" class="form-control" />
                <span asp-validation-for="Curso.Descripcion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Curso.AnoCalendario" class="form-label">Año Calendario</label>
                <input min="2000" max="2025" asp-for="Curso.AnoCalendario" type="number" class="form-control" />
                <span asp-validation-for="Curso.AnoCalendario" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Curso.Cupo" class="form-label">Cupo</label>
                <input min="0" max="100" asp-for="Curso.Cupo" type="number" class="form-control" />
                <span asp-validation-for="Curso.Cupo" class="text-danger"></span>
            </div>
            <select class="form-select mb-3" asp-for="Curso.IDMateria" asp-items="Model.Materias"></select>
            <select class="form-select mb-3" asp-for="Curso.IDComision" asp-items="Model.Comisiones"></select>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}