@model Business.Entities.Curso

    <h2 class="mb-3 text-center">Eliminar curso</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <input asp-for="ID" type="hidden" />
            <div class="form-group">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <input disabled asp-for="Descripcion" class="form-control" placeholder="@Model.Descripcion" value="@Model.Descripcion" />
            </div>
            <div class="form-group">
                <label asp-for="AnoCalendario" class="form-label">Año Calendario</label>
                <input disabled asp-for="AnoCalendario" type="number" class="form-control" placeholder="@Model.AnoCalendario" value="@Model.AnoCalendario" />
            </div>
            <div class="form-group">
                <label asp-for="Cupo" class="form-label">Cupo</label>
                <input disabled asp-for="Cupo" type="number" class="form-control" placeholder="@Model.Cupo" value="@Model.Cupo" />
            </div>
            <div class="form-group">
                <label asp-for="Materia" class="form-label">Materia</label>
                <input disabled asp-for="Materia" class="form-control" placeholder="@Model.Materia.Descripcion" value="@Model.Materia.Descripcion" />
            </div>
            <div class="form-group">
                <label asp-for="Comision" class="form-label">Comision</label>
                <input disabled asp-for="Comision" class="form-control" placeholder="@Model.Comision.Descripcion" value="@Model.Comision.Descripcion" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Confirmar</button>
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>