@model EditPersonaViewModel

    <h2 class="mb-3 text-center">Editar persona</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <input asp-for="Persona.ID" type="hidden" />
            <div class="mb-3">
                <label asp-for="Persona.Legajo" class="form-label">Legajo</label>
                <input asp-for="Persona.Legajo" class="form-control" placeholder="@Model.Persona.Legajo" value="@Model.Persona.Legajo" />
                <span asp-validation-for="Persona.Legajo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Persona.Nombre" class="form-label">Nombre</label>
                <input asp-for="Persona.Nombre" class="form-control" placeholder="@Model.Persona.Nombre" value="@Model.Persona.Nombre" />
                <span asp-validation-for="Persona.Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Persona.Apellido" class="form-label">Apellido</label>
                <input asp-for="Persona.Apellido" class="form-control" placeholder="@Model.Persona.Apellido" value="@Model.Persona.Apellido" />
                <span asp-validation-for="Persona.Apellido" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Persona.Direccion" class="form-label">Direccion</label>
                <input asp-for="Persona.Direccion" class="form-control" placeholder="@Model.Persona.Direccion" value="@Model.Persona.Direccion" />
                <span asp-validation-for="Persona.Direccion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Persona.Email" class="form-label">Email</label>
                <input asp-for="Persona.Email" class="form-control" placeholder="@Model.Persona.Email" value="@Model.Persona.Email" />
                <span asp-validation-for="Persona.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Persona.Telefono" class="form-label">Telefono</label>
                <input asp-for="Persona.Telefono" class="form-control" placeholder="@Model.Persona.Telefono" value="@Model.Persona.Telefono" />
                <span asp-validation-for="Persona.Telefono" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Persona.FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                <input asp-for="Persona.FechaNacimiento" class="form-control" placeholder="@Model.Persona.FechaNacimiento.ToString("yyyy-MM-dd")" value="@Model.Persona.FechaNacimiento.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Persona.FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-gr">
                <label asp-for="Persona.TipoPersona" class="form-label">Tipo</label><br />
                <select class="form-select mb-3" id="ComboTipoPersona" asp-for="Persona.TipoPersona" asp-items="Model.TiposPersona"></select>
            </div>
            <div class="form-gr" id="DivPlan">
                <label asp-for="Persona.Plan" class="form-label">Plan</label>
                <select class="form-select mb-3" asp-for="Persona.IDPlan" asp-items="Model.Planes"></select>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {
            if ($('#ComboTipoPersona').val() == 3) {
                $("#DivPlan").hide()
            }
            $('#ComboTipoPersona').on('change', function (e) {
                var selectValue = this.value;
                if (selectValue == 3) {
                    $("#DivPlan").hide();
                }
                else {
                    $("#DivPlan").show();
                }
            });
        });
    </script>
}