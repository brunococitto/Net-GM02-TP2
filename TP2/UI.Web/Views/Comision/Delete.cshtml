@model Business.Entities.Comision

    <h2 class="mb-3 text-center">Eliminar comisión</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <input asp-for="ID" type="hidden" />
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">Descripcion</label>
                <input disabled asp-for="Descripcion" class="form-control" placeholder="@Model.Descripcion" value="@Model.Descripcion" />
            </div>
            <div class="mb-3">
                <label asp-for="AnoEspecialidad" class="form-label">Año especialidad</label>
                <input disabled asp-for="AnoEspecialidad" class="form-control" placeholder="@Model.AnoEspecialidad" value="@Model.AnoEspecialidad" />
            </div>
            <div class="mb-3">
                <label asp-for="Plan" class="form-label">Plan</label>
                <input disabled asp-for="Plan" class="form-control" placeholder="@Model.Plan.Descripcion" value="@Model.Plan.Descripcion" />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Confirmar</button>
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>