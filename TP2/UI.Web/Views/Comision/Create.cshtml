@model CreateComisionViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comision.Descripcion" class="form-label">Descripción</label>
                <input maxlength="20" minlength="3" asp-for="Comision.Descripcion" class="form-control" />
                <span asp-validation-for="Comision.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comision.AnoEspecialidad" class="form-label">Año especialidad</label>
                <input maxlength="20" minlength="3" asp-for="Comision.AnoEspecialidad" class="form-control" />
                <span asp-validation-for="Comision.AnoEspecialidad" class="text-danger"></span>
            </div>
            <select class="form-group" asp-for="Comision.IDPlan" asp-items="Model.Planes"></select>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}