@model Business.Entities.Persona
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input disabled id="txtNombre" name="asd" asp-for="Nombre" class="form-control" placeholder="@Model.Nombre" value="@Model.Nombre" />
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="form-label">Apellido</label>
                <input disabled asp-for="Apellido" class="form-control" placeholder="@Model.Apellido" value="@Model.Apellido" />
            </div>
        </form>
    </div>
</div>