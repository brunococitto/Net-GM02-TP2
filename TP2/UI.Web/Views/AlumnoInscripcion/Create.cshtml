@model CreateAlumnoInscripcionViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="form-label">Ingrese Legajo</label>
                <input maxlength="20" minlength="3" id="legajo" name="legajo" class="form-control" onfocusout='buscaPersona();' />
                <span id='message'></span>
            </div>

            <div id="partialAlumnoInscripcion" name="partialAlumnoInscripcion">

            </div>
            <select class="form-group" asp-for="AlumnoInscripcion.IDCurso" asp-items="Model.Cursos"></select>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
    var buscaPersona = function () {

        $.ajax(
            {
                type: 'POST',
                url: '@Url.Action("GetPersona", "AlumnoInscripcion")',
                data: { legajo: document.getElementById('legajo').value },
                success: function (data) { $("#partialAlumnoInscripcion").html(data); alert('se encuentra persona con el legajo indicado'); },
                error: function (data)
                {
                    alert('No se encuentra persona con el legajo indicado');
                    $("#partialAlumnoInscripcion").fadeOut(200);
                }
            });
    };
    </script>
}