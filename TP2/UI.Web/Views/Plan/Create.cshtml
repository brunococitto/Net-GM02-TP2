@model CreatePlanViewModel

    <h2 class="mb-3 text-center">Crear plan</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <div class="mb-3">
                <label asp-for="Plan.Descripcion" class="form-label">Descripción</label>
                <input maxlength="20" minlength="3" asp-for="Plan.Descripcion" class="form-control" />
                <span asp-validation-for="Plan.Descripcion" class="text-danger"></span>
            </div>
            
            <select class="form-select mb-3" asp-for="Plan.IDEspecialidad" asp-items="Model.Especialidades"></select>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}